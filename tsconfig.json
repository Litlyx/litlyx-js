{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": false,
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules"
    ]
}